<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_chothue_laptop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_chothue_laptop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Dịch Vụ Thuê Laptop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            var userRoleIdStr = Context.Session.GetString("UserRoleId");
                            var userRoleId = 0L;
                            if (!string.IsNullOrEmpty(userRoleIdStr))
                            {
                                long.TryParse(userRoleIdStr, out userRoleId);
                            }
                            var userRole = Context.Session.GetString("UserRole")?.ToLower() ?? "";
                            var isCustomer = userRoleId == 2 || userRole.Contains("customer") || userRole.Contains("student");
                            var isStudent = userRoleId == 3 || userRole.Contains("student");
                            var isStaff = userRoleId == 4 || userRole.Contains("staff");
                            
                            @* Hiển thị nút Thông báo cho Student *@
                            @if (isStudent)
                            {
                                <li class="nav-item d-flex align-items-center position-relative">
                                    <a class="nav-link text-white fw-semibold d-flex align-items-center" 
                                       asp-controller="Student" 
                                       asp-action="Notifications"
                                       style="line-height: 1.5;">
                                        <i class="bi bi-bell me-1"></i> Thông báo nhận máy
                                        @await Component.InvokeAsync("NotificationBadge")
                                    </a>
                                </li>
                            }
                            
                            @* Hiển thị nút chat - controller sẽ tự động redirect nếu không đúng quyền *@
                            @if (!isStaff)
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link text-white fw-semibold d-flex align-items-center" 
                                       asp-controller="Chat" 
                                       asp-action="CustomerChat"
                                       style="line-height: 1.5;">
                                        <i class="bi bi-chat-dots me-1"></i> Hỗ trợ khách hàng
                                    </a>
                                </li>
                            }
                            @if (isStaff)
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link text-white fw-semibold d-flex align-items-center" 
                                       asp-controller="Chat" 
                                       asp-action="StaffChat"
                                       style="line-height: 1.5;">
                                        <i class="bi bi-headset me-1"></i> Hỗ trợ khách hàng
                                    </a>
                                </li>
                            }
                            @await Component.InvokeAsync("UserInfo")
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-controller="Account" asp-action="Login">Đăng Nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-controller="Account" asp-action="Register">Đăng Ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white bg-primary py-3 mt-5">
        <div class="container text-center">
            &copy; 2025 - Dịch Vụ Thuê Laptop Cho Sinh Viên - Tất cả quyền được bảo lưu
        </div>
    </footer>

    <!-- Floating Chat Button - Hiển thị cho tất cả user đã đăng nhập -->
    @if (Context.Session.GetString("UserId") != null)
    {
        var userRoleIdStr = Context.Session.GetString("UserRoleId");
        var userRoleId = 0L;
        if (!string.IsNullOrEmpty(userRoleIdStr))
        {
            long.TryParse(userRoleIdStr, out userRoleId);
        }
        var userRole = Context.Session.GetString("UserRole")?.ToLower() ?? "";
        var isStaff = userRoleId == 4 || userRole.Contains("staff");
        
        @* Hiển thị nút chat cho tất cả user - controller sẽ tự động redirect nếu không đúng quyền *@
        @if (!isStaff)
        {
            <a href="@Url.Action("CustomerChat", "Chat")" class="btn btn-primary floating-chat-button" 
               title="Hỗ trợ khách hàng">
                <i class="bi bi-chat-dots-fill"></i>
            </a>
        }
        else
        {
            <a href="@Url.Action("StaffChat", "Chat")" class="btn btn-success floating-chat-button" 
               title="Hỗ trợ khách hàng - Staff">
                <i class="bi bi-headset"></i>
            </a>
        }
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
