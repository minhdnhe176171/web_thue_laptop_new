@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.Booking>

@{
    ViewData["Title"] = "Trả Máy Cho Sinh Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<style>
    /* 1. Reset khung chứa của Layout chính để nội dung tràn viền 100% */
    .container, .container-fluid, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    /* 2. Thiết lập bố cục Flex cho trang Staff */
    .staff-wrapper {
        display: flex;
        width: 100%;
        min-height: calc(100vh - 60px); /* Trừ đi chiều cao Header nếu có */
        background-color: #f8f9fa; /* Màu nền xám nhạt giống trang Index */
    }

    /* 3. Sidebar bên trái */
    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    /* 4. Nội dung chính bên phải */
    .staff-content {
        flex-grow: 1;
        padding: 30px;
        background-color: #f8f9fa;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>
            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")"><i class="fas fa-list"></i> Máy Đang Thuê</a>
            
            <a href="@Url.Action("DueForReturnLaptops", "Staff")" class="active"><i class="fas fa-undo"></i> Trả Máy Về SV</a>
            
            <a href="@Url.Action("Deliveries", "Staff")"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
        </div>
    </div>

    <div class="staff-content">
        <h3 class="fw-bold text-primary mb-4">Danh Sách Máy Chờ Trả Về Sinh Viên</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success shadow-sm"><i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger shadow-sm"><i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]</div>
        }

        <form asp-action="DueForReturnLaptops" method="get" class="mb-3">
            <div class="input-group" style="max-width: 500px;">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm tên máy, sinh viên, khách hàng..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Tìm kiếm</button>
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                {
                    <a asp-action="DueForReturnLaptops" class="btn btn-outline-secondary">Xóa</a>
                }
            </div>
        </form>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4 py-3">Mã Đơn</th>
                                <th>Khách Hàng</th>
                                <th>Laptop</th>
                                <th>Chủ Máy</th>
                                <th>Ngày Thuê</th>
                                <th>Trạng Thái</th>
                                <th>Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                @foreach (var booking in Model)
                                {
                                    // ✅ Kiểm tra xem đã tạo thông báo chưa (dùng ReturnDueDate)
                                    bool hasNotification = booking.ReturnDueDate.HasValue;
                                    
                                    // ✅ Kiểm tra Student đã xác nhận chưa (parse từ RejectReason)
                                    bool isConfirmedByStudent = false;
                                    if (hasNotification && !string.IsNullOrEmpty(booking.RejectReason) && booking.RejectReason.Contains("CONFIRMED"))
                                    {
                                        isConfirmedByStudent = true;
                                    }
                                    
                                    <tr>
                                        <td class="ps-4">
                                            <span class="badge bg-success">#@booking.Id</span>
                                        </td>
                                        <td>
                                            @if (booking.Customer != null)
                                            {
                                                <span class="fw-bold">@booking.Customer.LastName @booking.Customer.FirstName</span>
                                                <br />
                                                <small class="text-muted">@booking.Customer.Email</small>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Không xác định</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="fw-bold text-dark">@booking.Laptop?.Name</span><br />
                                            <small class="text-muted">@booking.Laptop?.Brand?.BrandName</small>
                                        </td>
                                        <td>
                                            @if (booking.Laptop?.Student != null)
                                            {
                                                <span class="fw-bold">@booking.Laptop.Student.LastName @booking.Laptop.Student.FirstName</span>
                                                <br />
                                                <small class="text-muted">@booking.Laptop.Student.Email</small>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Không xác định</span>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                <i class="fas fa-calendar-check text-success"></i> @booking.StartTime.ToString("dd/MM/yyyy")<br />
                                                <i class="fas fa-calendar-times text-danger"></i> @booking.EndTime.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            @if (isConfirmedByStudent)
                                            {
                                                <span class="badge bg-success">Student đã xác nhận</span>
                                            }
                                            else if (hasNotification)
                                            {
                                                <span class="badge bg-warning text-dark">Đã gửi thông báo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Đã hoàn thành</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (isConfirmedByStudent)
                                            {
                                                <small class="text-success fw-bold">
                                                    <i class="fas fa-check-double"></i> Đã xong
                                                </small>
                                            }
                                            else if (!hasNotification)
                                            {
                                                <button type="button"
                                                        class="btn btn-outline-primary btn-sm"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#returnModal"
                                                        onclick="setModalData('@booking.Id', '@booking.Laptop?.Id', '@booking.Laptop?.Name', '@booking.Laptop?.Student?.LastName @booking.Laptop?.Student?.FirstName', '@booking.Laptop?.Student?.Id')">
                                                    <i class="fas fa-calendar-check me-1"></i> Tạo Đơn
                                                </button>
                                            }
                                            else
                                            {
                                                <small class="text-warning">
                                                    <i class="fas fa-clock"></i> Chờ SV xác nhận
                                                </small>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-5 text-muted">
                                        <i class="fas fa-box-open fa-2x mb-3"></i><br />
                                        Không có đơn nào đang chờ trả máy về cho sinh viên.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="p-3 d-flex justify-content-end border-top">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <a asp-action="DueForReturnLaptops"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="btn btn-outline-secondary btn-sm me-2 @prevDisabled">
                        <i class="fas fa-chevron-left"></i> Trước
                    </a>
                    <span class="align-self-center mx-2 text-muted">Trang @Model.PageIndex / @Model.TotalPages</span>
                    <a asp-action="DueForReturnLaptops"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="btn btn-outline-secondary btn-sm ms-2 @nextDisabled">
                        Sau <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Tạo Đơn Trả Máy -->
<div class="modal fade" id="returnModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <form asp-action="CreateReturnNotification" asp-controller="Staff" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold"><i class="fas fa-clock me-2"></i>Tạo Đơn Trả Máy Về Cho Student</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="BookingId" id="modalBookingId" />
                    <input type="hidden" name="LaptopId" id="modalLaptopId" />
                    <input type="hidden" name="StudentId" id="modalStudentId" />

                    <div class="mb-3">
                        <label class="form-label text-muted small text-uppercase fw-bold">Máy cần trả</label>
                        <input type="text" class="form-control bg-light fw-bold" id="modalLaptopName" readonly disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small text-uppercase fw-bold">Chủ sở hữu (Student)</label>
                        <input type="text" class="form-control bg-light" id="modalStudentName" readonly disabled />
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label text-muted small text-uppercase fw-bold">Địa điểm nhận (Cố định)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt text-danger"></i></span>
                                <input type="text" class="form-control" name="PickupLocation" value="Tòa Alpha, L300" readonly />
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label text-muted small text-uppercase fw-bold">Thời gian hẹn</label>
                            <input type="datetime-local" class="form-control border-primary" name="AppointmentTime" required
                                   value="@DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm")" />
                        </div>
                    </div>
                    <div class="alert alert-info small mb-0">
                        <i class="fas fa-info-circle me-1"></i> Thông tin sẽ được gửi đến Student. Student cần xác nhận đã nhận máy.
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary px-4">Gửi Đơn</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setModalData(bookingId, laptopId, laptopName, studentName, studentId) {
        document.getElementById('modalBookingId').value = bookingId;
        document.getElementById('modalLaptopId').value = laptopId;
        document.getElementById('modalLaptopName').value = laptopName;
        document.getElementById('modalStudentName').value = studentName;
        document.getElementById('modalStudentId').value = studentId;
    }
</script>