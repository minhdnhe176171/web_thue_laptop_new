@model web_chothue_laptop.Models.Booking

@{
    ViewData["Title"] = "Giao Máy Nhanh";
}

<style>
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>
            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")"><i class="fas fa-list"></i> Máy Đang Thuê</a>
            <a href="@Url.Action("Deliveries", "Staff")"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
            <a href="@Url.Action("QuickHandover", "Staff")" class="active"><i class="fas fa-bolt"></i> Giao Máy Nhanh</a>
        </div>
    </div>

    <div class="staff-content">
        <h2 class="text-primary mb-3"><i class="fa fa-bolt"></i> Giao Máy & Thu Tiền</h2>
        <p class="text-muted">Nhập mã đơn hàng để kiểm tra và xác nhận giao máy cho khách.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger"><i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning"><i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]</div>
        }

        <div class="card mb-4 shadow-sm border-0">
            <div class="card-body">
                <form asp-action="QuickHandover" method="get" class="row g-3 align-items-center">
                    <div class="col-auto"><label class="fw-bold">Nhập Mã Đơn Hàng (ID):</label></div>
                    <div class="col-auto">
                        <input type="number" name="searchBookingId" class="form-control" placeholder="#..." required value="@(Model?.Id)">
                    </div>
                    <div class="col-auto"><button type="submit" class="btn btn-primary">Tìm Kiếm</button></div>
                </form>
            </div>
        </div>

        @if (Model != null)
        {
            <div class="card border-primary shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between">
                    <h5 class="mb-0">Thông Tin Đơn Hàng #@Model.Id</h5>
                    <span class="badge bg-light text-dark">Status: @Model.Status?.StatusName</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-7">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr><td class="fw-bold" width="150">Khách hàng:</td><td class="text-uppercase text-primary fw-bold">@(Model.Customer?.LastName + " " + Model.Customer?.FirstName)</td></tr>
                                    <tr><td class="fw-bold">Laptop:</td><td>@Model.Laptop?.Name <span class="badge bg-info text-dark">@Model.Laptop?.Brand?.BrandName</span></td></tr>
                                    <tr>
                                        <td class="fw-bold">Thời gian thuê:</td>
                                        <td>Từ: <strong>@Model.StartTime.ToString("dd/MM/yyyy")</strong> <br />Đến: <strong>@Model.EndTime.ToString("dd/MM/yyyy")</strong></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-5 text-center border-start">
                            <h6 class="text-muted">Tổng Tiền Thanh Toán</h6>
                            <h2 class="text-danger fw-bold my-3">@(Model.TotalPrice.HasValue? Model.TotalPrice.Value.ToString("N0") : "0") VNĐ</h2>

                            @if (Model.StatusId == 2)
                            {
                                <div class="alert alert-warning small"><i class="fa fa-info-circle"></i> Kiểm tra kỹ máy và tiền trước khi xác nhận.</div>
                                <form asp-action="ConfirmHandover" method="post">
                                    <input type="hidden" name="bookingId" value="@Model.Id" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-lg w-100" onclick="return confirm('Đã nhận tiền và giao máy thành công?');"><i class="fa fa-check-circle"></i> XÁC NHẬN GIAO MÁY</button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-secondary">Không thể thao tác (Trạng thái: @Model.Status?.StatusName)</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>