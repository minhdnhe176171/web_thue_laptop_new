@model IEnumerable<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Duyệt Đơn Thuê";
}

<style>
    /* Reset padding của container cha nếu có */
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px); /* Trừ đi chiều cao ước lượng của header chính */
        background-color: #f8f9fa;
        margin-top: -1.5rem; /* Kéo ngược lên để sát với header dịch vụ */
        padding-top: 1.5rem; /* Bù lại padding bên trong */
    }

    /* Sidebar Styles - MÀU XANH */
    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd; /* Đổi sang MÀU XANH Bootstrap Primary */
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            /* Trạng thái Active - MÀU XANH */
            .sidebar-menu a.active {
                background-color: #e7f1ff; /* Xanh nhạt */
                color: #0d6efd; /* Chữ xanh đậm */
                font-weight: bold;
                border-left-color: #0d6efd; /* Viền trái xanh */
            }

    /* Nội dung chính */
    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header">
            <i class="fas fa-user-shield"></i> Staff Dashboard
        </div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")" class="active">
                <i class="fas fa-check-square"></i> Duyệt Đơn Thuê
            </a>

            <a href="@Url.Action("LaptopRequests", "Staff")">
                <i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra
            </a>

            <a href="@Url.Action("RentedLaptops", "Staff")">
                <i class="fas fa-list"></i> Máy Đang Thuê
            </a>

            <a href="@Url.Action("Deliveries", "Staff")">
                <i class="fas fa-truck"></i> Quản lý Giao Máy
            </a>
        </div>
    </div>

    <div class="staff-content">
        <h3 class="fw-bold text-primary mb-4">Quản Lý Đơn Thuê (@(Model != null ? Model.Count() : 0))</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning"><i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]</div>
        }

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Mã Đơn</th>
                            <th>Khách Hàng</th>
                            <th>Laptop</th>
                            <th>Thời Gian</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">#@item.Id</td>
                                    <td>@(item.Customer?.LastName + " " + item.Customer?.FirstName)</td>
                                    <td>@item.Laptop?.Name</td>
                                    <td>@item.StartTime.ToString("dd/MM") - @item.EndTime.ToString("dd/MM")</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <form asp-action="ApproveBooking" method="post">
                                                <input type="hidden" name="bookingId" value="@item.Id" />
                                                <button class="btn btn-success btn-sm">Duyệt</button>
                                            </form>
                                            <form asp-action="RejectBooking" method="post">
                                                <input type="hidden" name="bookingId" value="@item.Id" />
                                                <button class="btn btn-outline-danger btn-sm">Hủy</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">Không có đơn thuê nào cần duyệt.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>