@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Duyệt Đơn Thuê";
}

<style>
    /* CSS Chung cho giao diện Staff */
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")" class="active"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>

            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")"><i class="fas fa-list"></i> Máy Đang Thuê</a>
            <a href="@Url.Action("DueForReturnLaptops", "Staff")"><i class="fas fa-undo"></i> Trả Máy Về SV</a>
            <a href="@Url.Action("Deliveries", "Staff")"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
        </div>
    </div>

    <div class="staff-content">
        <h3 class="fw-bold text-primary mb-4">Quản Lý Đơn Thuê (@ViewData["TotalCount"])</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning"><i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]</div>
        }
        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group" style="max-width: 500px;">
                <input type="text" name="searchString" class="form-control"
                       placeholder="Tìm tên khách, mã đơn..." value="@ViewData["CurrentFilter"]">
                <button class="btn btn-primary text-nowrap" type="submit">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>

                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">Xóa</a>
                }
            </div>
        </form>
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Mã Đơn</th>
                            <th>Khách Hàng</th>
                            <th>Laptop</th>
                            <th>Thời Gian</th>
                            <th>Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="@((item.Customer?.BlackList == true) ? "table-danger" : "")">
                                    <td class="ps-4 fw-bold text-primary">#@item.Id</td>
                                    <td>
                                        @(item.Customer?.LastName + " " + item.Customer?.FirstName)
                                        @if (item.Customer?.BlackList == true)
                                        {
                                            <span class="badge bg-danger ms-2">BLACKLIST</span>
                                        }
                                    </td>
                                    <td>@item.Laptop?.Name</td>
                                    <td>@item.StartTime.ToString("dd/MM") - @item.EndTime.ToString("dd/MM")</td>
                                    <td>
                                        <a asp-action="BookingDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">Không có đơn thuê nào cần duyệt.</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="p-3 d-flex justify-content-end">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm me-2 @prevDisabled">Trước</a>
                    <span class="align-self-center mx-2">Trang @Model.PageIndex / @Model.TotalPages</span>
                    <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm ms-2 @nextDisabled">Sau</a>
                </div>
            </div>
        </div>
    </div>
</div>