@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Quản lý Giao Máy";
}

<style>
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>
            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")"><i class="fas fa-list"></i> Máy Đang Thuê</a>
            <a href="@Url.Action("Deliveries", "Staff")" class="active"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
            <a href="@Url.Action("QuickHandover", "Staff")"><i class="fas fa-bolt"></i> Giao Máy Nhanh</a>
        </div>
    </div>

    <div class="staff-content">
        <h2 class="text-primary fw-bold mb-4">Danh Sách Cần Giao Máy</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show"> <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button> </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show"> <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button> </div>
        }
        <form asp-action="Deliveries" method="get" class="mb-3">
            <div class="input-group" style="max-width: 500px;">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm khách hàng, booking ID..." value="@ViewData["CurrentFilter"]">

                <button type="submit" class="btn btn-primary text-nowrap">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>

                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Deliveries" class="btn btn-outline-secondary">X</a>
                }
            </div>
        </form>
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">Khách hàng đang chờ nhận máy</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Mã Booking</th>
                            <th>Khách Hàng</th>
                            <th>Laptop</th>
                            <th>Thời Gian Thuê</th>
                            <th>Tổng Tiền</th>
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var booking in Model)
                            {
                                var isToday = booking.StartTime.Date == DateTime.Today;
                                var isPast = booking.StartTime.Date < DateTime.Today;
                                <tr class="@(isPast ? "table-danger" : (isToday ? "table-warning" : ""))">
                                    <td class="ps-4">
                                        <span class="badge bg-primary">#@booking.Id</span>
                                        @if (isPast)
                                        {
                                            <br />
                                            <small class="text-danger"><i class="fas fa-exclamation-triangle"></i> Quá hạn nhận</small>
         }
                                        else if (isToday)
                                        {
                                            <br />
                                            <small class="fw-bold"><i class="fas fa-clock"></i> Hôm nay</small>
         }
                                    </td>
                                    <td>
                                        <span class="fw-semibold">@(booking.Customer?.LastName) @(booking.Customer?.FirstName)</span><br />
                                        <small class="text-muted"><i class="fas fa-phone"></i> @booking.Customer?.Phone</small>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@booking.Laptop?.Name</span><br />
                                        <small class="text-muted">@booking.Laptop?.Brand?.BrandName</small>
                                    </td>
                                    <td>
                                        <i class="fas fa-calendar-check text-success"></i> @booking.StartTime.ToString("dd/MM/yyyy") <br />
                                        <i class="fas fa-calendar-times text-danger"></i> @booking.EndTime.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-success fw-bold">@(booking.TotalPrice?.ToString("#,##0") ?? "0") đ</td>
                                    <td class="text-center">
                                        <a asp-action="CreateDelivery" asp-route-id="@booking.Id" class="btn btn-success btn-sm">
                                            <i class="fas fa-truck"></i> Giao Máy
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="6" class="text-center py-5 text-muted"><i class="fas fa-inbox fa-3x mb-3 d-block"></i>Không có booking nào cần giao máy</td></tr>
                        }
                    </tbody>
                </table>
                <div class="p-3 d-flex justify-content-end">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <a asp-action="Deliveries" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm me-2 @prevDisabled">Trước</a>
                    <span class="align-self-center mx-2">Trang @Model.PageIndex / @Model.TotalPages</span>
                    <a asp-action="Deliveries" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm ms-2 @nextDisabled">Sau</a>
                </div>
            </div>
        </div>
    </div>
</div>