@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.Laptop>
@{
    ViewData["Title"] = "Máy Chờ Kiểm Tra";
}

<style>
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>
            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")"><i class="fas fa-list"></i> Máy Đang Thuê</a>

            <a href="@Url.Action("DueForReturnLaptops", "Staff")"><i class="fas fa-undo"></i> Trả Máy Về SV</a>

            <a href="@Url.Action("Deliveries", "Staff")"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
            <a href="@Url.Action("QuickHandover", "Staff")"><i class="fas fa-bolt"></i> Thanh toán</a>
        </div>
    </div>

    <div class="staff-content">
        <h3 class="fw-bold text-primary mb-4">Máy Chờ Kiểm Tra (@ViewData["TotalCount"])</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]</div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning"><i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]</div>
        }
        <form asp-action="LaptopRequests" method="get" class="mb-3">
            <div class="input-group" style="max-width: 500px;">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm tên máy, sinh viên..." value="@ViewData["CurrentFilter"]">

                <button type="submit" class="btn btn-primary text-nowrap">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>

                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="LaptopRequests" class="btn btn-outline-secondary">X</a>
                }
            </div>
        </form>
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 py-3" style="width: 30%;">Tên Laptop</th>
                            <th style="width: 20%;">Chủ Máy</th>
                            <th style="width: 20%;">Trạng Thái</th>
                            <th style="width: 15%;">Giá Thuê</th>
                            <th class="text-end pe-4" style="width: 15%;">Xử Lý</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var laptop in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="fw-bold text-dark">@laptop.Name</span><br />
                                        <small class="text-muted">ID: @laptop.Id</small>
                                    </td>
                                    <td>@(laptop.Student?.LastName + " " + laptop.Student?.FirstName)</td>

                                    <td>
                                        @if (laptop.StatusId == 1)
                                        {
                                            <span class="badge bg-warning text-dark">Chờ gửi Technical</span>
                                        }
                                        else if (laptop.StatusId == 2)
                                        {
                                            <span class="badge bg-success">Technical đã duyệt</span>
                                        }
                                        else if (laptop.StatusId == 4)
                                        {
                                            @if (laptop.TechnicalTickets != null && laptop.TechnicalTickets.Any(t => t.StatusId != 2 && t.StatusId != 8 && t.StatusId != 3))
                                            {
                                                <span class="badge bg-info text-dark">Technical đang kiểm tra</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Cần gửi lại phiếu</span>
                                            }
                                        }
                                    </td>

                                    <td class="text-success fw-bold">
                                        @(laptop.Price.HasValue? laptop.Price.Value.ToString("#,##0") : "0") đ
                                    </td>

                                    <td class="text-end pe-4">
                                        @if (laptop.StatusId == 1)
                                        {
                                            <form asp-action="SendToTechnical" method="post">
                                                <input type="hidden" name="laptopId" value="@laptop.Id" />
                                                <button class="btn btn-primary btn-sm text-nowrap">Gửi Technical</button>
                                            </form>
                                        }
                                        else if (laptop.StatusId == 2)
                                        {
                                            <form asp-action="PublishLaptop" method="post">
                                                <input type="hidden" name="laptopId" value="@laptop.Id" />
                                                <button class="btn btn-success btn-sm text-nowrap" onclick="return confirm('Xác nhận cho thuê?')">Cho Thuê</button>
                                            </form>
                                        }
                                        else if (laptop.StatusId == 4)
                                        {
                                            @if (laptop.TechnicalTickets != null && laptop.TechnicalTickets.Any(t => t.StatusId != 2 && t.StatusId != 8 && t.StatusId != 3))
                                            {
                                                <button class="btn btn-secondary btn-sm text-nowrap" disabled>
                                                    <i class="fas fa-clock"></i> Đang chờ Tech...
                                                </button>
                                            }
                                            else
                                            {
                                                <form asp-action="SendToTechnical" method="post">
                                                    <input type="hidden" name="laptopId" value="@laptop.Id" />
                                                    <button class="btn btn-warning btn-sm shadow-sm border border-dark text-nowrap" title="Bấm để gửi lại phiếu">
                                                        <i class="fas fa-sync-alt"></i> Gửi Lại Phiếu
                                                    </button>
                                                </form>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center py-5 text-muted">Không có máy mới nào đang chờ.</td></tr>
                        }
                    </tbody>
                </table>
                <div class="p-3 d-flex justify-content-end">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <a asp-action="LaptopRequests" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm me-2 @prevDisabled">Trước</a>
                    <span class="align-self-center mx-2">Trang @Model.PageIndex / @Model.TotalPages</span>
                    <a asp-action="LaptopRequests" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-outline-primary btn-sm ms-2 @nextDisabled">Sau</a>
                </div>
            </div>
        </div>
    </div>
</div>