@model IEnumerable<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Laptop Đang Được Thuê";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Laptop Đang Được Thuê</h2>
        <div>
            <a asp-action="Deliveries" class="btn btn-success me-2">
                <i class="fas fa-truck"></i> Quản lý Giao Máy
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Tổng Đang Thuê</h6>
                            <h2 class="mb-0">@Model.Count()</h2>
                        </div>
                        <i class="fas fa-laptop fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Sắp Hết Hạn</h6>
                            <h2 class="mb-0">@Model.Count(b => (b.EndTime - DateTime.Today).Days <= 2 && (b.EndTime - DateTime.Today).Days >= 0)</h2>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Quá Hạn</h6>
                            <h2 class="mb-0">@Model.Count(b => b.EndTime < DateTime.Today)</h2>
                        </div>
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75">Doanh Thu</h6>
                            <h2 class="mb-0">@(Model.Sum(b => b.TotalPrice ?? 0).ToString("#,##0"))</h2>
                        </div>
                        <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary">Danh sách laptop đang cho thuê</h5>
            <small class="text-muted">Hiển thị các booking đang trong thời gian thuê</small>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Mã Booking</th>
                            <th>Khách Hàng</th>
                            <th>Laptop</th>
                            <th>Chủ Máy</th>
                            <th>Ngày Giao</th>
                            <th>Ngày Trả</th>
                            <th>Còn Lại</th>
                            <th>Tổng Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var booking in Model)
                            {
                                var daysLeft = (booking.EndTime - DateTime.Today).Days;
                                var isOverdue = daysLeft < 0;
                                var isExpiringSoon = daysLeft >= 0 && daysLeft <= 2;
                                var deliveryDate = booking.BookingReceipts?.FirstOrDefault()?.CreatedDate;
                                
                                <tr class="@(isOverdue ? "table-danger" : isExpiringSoon)">
                                    <td class="ps-4">
                                        <span class="badge bg-primary">#@booking.Id</span>
                                        @if (isOverdue)
                                        {
                                            <br /><small class="text-danger fw-bold"><i class="fas fa-exclamation-circle"></i> QUÁ HẠN</small>
                                        }
                                        else if (isExpiringSoon)
                                        {
                                            <br /><small class=" fw-bold"><i class="fas fa-clock"></i> Sắp hết hạn</small>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-semibold">@(booking.Customer?.LastName) @(booking.Customer?.FirstName)</span>
                                            <br />
                                            <small class="text-muted">
                                                <i class="fas fa-envelope"></i> @booking.Customer?.Email
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <span class="fw-bold">@booking.Laptop?.Name</span>
                                            <br />
                                            <small class="text-muted">@booking.Laptop?.Brand?.BrandName</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span>@(booking.Laptop?.Student?.LastName) @(booking.Laptop?.Student?.FirstName)</span>
                                    </td>
                                    <td>
                                        @if (deliveryDate.HasValue)
                                        {
                                            <span>@deliveryDate.Value.ToString("dd/MM/yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                            @booking.EndTime.ToString("dd/MM/yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        @if (isOverdue)
                                        {
                                            <span class="badge bg-danger">Trễ @Math.Abs(daysLeft) ngày</span>
                                        }
                                        else if (daysLeft == 0)
                                        {
                                            <span class="badge bg-warning text-dark">Hôm nay</span>
                                        }
                                        else
                                        {
                                            <span class="badge @(isExpiringSoon ? " text-dark" : "bg-info")">
                                                Còn @daysLeft ngày
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-success fw-bold">@(booking.TotalPrice?.ToString("#,##0") ?? "0") đ</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    Hiện tại không có laptop nào đang được thuê
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
