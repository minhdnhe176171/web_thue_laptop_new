@model IEnumerable<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Laptop Đang Được Thuê";
}

<style>
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .staff-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .staff-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    .staff-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }
</style>

<div class="staff-wrapper">
    <div class="staff-sidebar">
        <div class="sidebar-header"><i class="fas fa-user-shield"></i> Staff Dashboard</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Staff")"><i class="fas fa-check-square"></i> Duyệt Đơn Thuê</a>
            <a href="@Url.Action("LaptopRequests", "Staff")"><i class="fas fa-laptop-medical"></i> Máy Chờ Kiểm Tra</a>
            <a href="@Url.Action("RentedLaptops", "Staff")" class="active"><i class="fas fa-list"></i> Máy Đang Thuê</a>
            <a href="@Url.Action("Deliveries", "Staff")"><i class="fas fa-truck"></i> Quản lý Giao Máy</a>
            <a href="@Url.Action("QuickHandover", "Staff")"><i class="fas fa-bolt"></i> Giao Máy Nhanh</a>
        </div>
    </div>

    <div class="staff-content">
        <h2 class="text-primary fw-bold mb-4">Laptop Đang Được Thuê</h2>

        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div><h6 class="text-uppercase mb-1 opacity-75">Tổng Đang Thuê</h6><h2 class="mb-0">@Model.Count()</h2></div>
                        <i class="fas fa-laptop fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Sắp Hết Hạn</h6>
                            <h2 class="mb-0">@Model.Count(b => (b.EndTime - DateTime.Today).Days <= 2 && (b.EndTime - DateTime.Today).Days >= 0)</h2>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div><h6 class="text-uppercase mb-1 opacity-75">Quá Hạn</h6><h2 class="mb-0">@Model.Count(b => b.EndTime < DateTime.Today)</h2></div>
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div><h6 class="text-uppercase mb-1 opacity-75">Doanh Thu</h6><h2 class="mb-0">@(Model.Sum(b => b.TotalPrice ?? 0).ToString("#,##0"))</h2></div>
                        <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 text-primary">Danh sách laptop đang cho thuê</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Mã</th>
                                <th>Khách Hàng</th>
                                <th>Laptop</th>
                                <th>Chủ Máy</th>
                                <th>Ngày Trả</th>
                                <th>Trạng Thái</th>
                                <th>Tổng Tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var booking in Model)
                                {
                                    var daysLeft = (booking.EndTime - DateTime.Today).Days;
                                    var isOverdue = daysLeft < 0;
                                    var isExpiringSoon = daysLeft >= 0 && daysLeft <= 2;

                                    <tr class="@(isOverdue ? "table-danger" : (isExpiringSoon ? "table-warning" : ""))">
                                        <td class="ps-4"><span class="badge bg-primary">#@booking.Id</span></td>
                                        <td>
                                            <span class="fw-semibold">@(booking.Customer?.LastName) @(booking.Customer?.FirstName)</span><br />
                                            <small class="text-muted">@booking.Customer?.Email</small>
                                        </td>
                                        <td><span class="fw-bold">@booking.Laptop?.Name</span></td>
                                        <td>@(booking.Laptop?.Student?.LastName) @(booking.Laptop?.Student?.FirstName)</td>
                                        <td>
                                            <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                @booking.EndTime.ToString("dd/MM/yyyy")
                                            </span>
                                        </td>
                                        <td>
                                            @if (isOverdue)
                                            {
                                                <span class="badge bg-danger">Trễ @Math.Abs(daysLeft) ngày</span>
                                            }
                                            else if (daysLeft == 0)
                                            {

                                                <span class="badge bg-warning text-dark">Hôm nay</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-info text-dark">Còn @daysLeft ngày</span>
                                            }
                                        </td>
                                        <td class="text-success fw-bold">@(booking.TotalPrice?.ToString("#,##0") ?? "0") đ</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="7" class="text-center py-5 text-muted">Không có laptop nào đang được thuê</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>