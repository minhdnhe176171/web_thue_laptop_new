@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>
@using web_chothue_laptop.Helpers

<div class="row mb-4">
    <div class="col-xl-4 col-md-6 mb-3"><div class="card bg-primary text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Tổng Số Đã Hoàn Thành</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["TotalCompleted"]</span><span class="fs-6"> máy</span></div></div></div></div>
    <div class="col-xl-4 col-md-6 mb-3"><div class="card bg-success text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đã Duyệt</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["ApprovedCount"]</span><span class="fs-6"> máy</span></div></div></div></div>
    <div class="col-xl-4 col-md-6 mb-3"><div class="card bg-secondary text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đã Đóng</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["ClosedCount"]</span><span class="fs-6"> máy</span></div></div></div></div>
</div>

<div class="card shadow-sm border-0 mb-4 animate__animated animate__fadeIn">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <input type="hidden" name="activeTab" value="report" />
            <div class="col-md-3"><label class="form-label">Tìm kiếm theo mã ticket</label><input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập mã ticket..."></div>
            <div class="col-md-3"><label class="form-label">Từ ngày</label><input type="date" name="startDate" value="@ViewData["StartDate"]" class="form-control"></div>
            <div class="col-md-3"><label class="form-label">Đến ngày</label><input type="date" name="endDate" value="@ViewData["EndDate"]" class="form-control"></div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-search"></i> Tìm kiếm</button>
                <a asp-action="Index" asp-route-activeTab="report" class="btn btn-outline-secondary"><i class="bi bi-arrow-clockwise"></i> Làm mới</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 animate__animated animate__fadeIn">
    <div class="card-header bg-white py-3"><h5 class="mb-0 text-primary">Lịch Sử Sửa Chữa</h5></div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr><th class="ps-4">Mã Ticket</th><th>Thiết Bị</th><th>Chủ Máy</th><th>Mô Tả Lỗi</th><th>Phản Hồi Technical</th><th>Ngày Tạo</th><th>Ngày Hoàn Thành</th><th>Trạng Thái</th></tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var ticket in Model)
                        {
                            <tr>
                                <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@ticket.Id</span></td>
                                <td><div class="fw-bold">@ticket.Laptop?.Name</div><div class="small text-muted">@ticket.Laptop?.Brand?.BrandName</div></td>
                                <td>
                                    @if (ticket.Laptop?.Student != null)
                                    {
                                        <div>@($"{ticket.Laptop.Student.LastName} {ticket.Laptop.Student.FirstName}")</div>
                                        <div class="small text-muted">@ticket.Laptop.Student.Email</div>
         }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td><div class="text-wrap" style="max-width: 250px;">@ticket.Description</div></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(ticket.TechnicalResponse))
                                    {
                                        <div class="text-wrap" style="max-width: 250px;">@ticket.TechnicalResponse</div>
                                    }
                                    else
                                    {

                                        <span class="text-muted">Chưa có phản hồi</span>
                                    }
                                </td>
                                <td>@ticket.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(ticket.UpdatedDate.HasValue? ticket.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                                <td>
                                    @if (ticket.Status != null)
                                    {
                                        var statusVi = StatusHelper.GetVietnameseStatus(ticket.Status.StatusName);
                                        var badgeClass = StatusHelper.GetStatusBadgeClass(ticket.Status.StatusName);
                                        <span class="badge @badgeClass">@statusVi</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">N/A</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center py-5 text-muted"><i class="bi bi-inbox fs-1 d-block mb-2"></i>Không tìm thấy dữ liệu sửa chữa nào.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @{
            var hasPrevious = Model?.HasPreviousPage ?? false;
            var hasNext = Model?.HasNextPage ?? false;
            var prevDisabled = !hasPrevious ? "disabled" : "";
            var nextDisabled = !hasNext ? "disabled" : "";
            var pageIndex = Model?.PageIndex ?? 1;
            var totalPages = Model?.TotalPages ?? 1;
            var totalCompleted = (ViewData["TotalCompleted"] as int?) ?? 0;
            var startItem = totalCompleted > 0 ? ((pageIndex - 1) * 10) + 1 : 0;
            var endItem = Math.Min(pageIndex * 10, totalCompleted);
        }

        @if (totalPages > 0)
        {
            <div class="d-flex justify-content-between align-items-center p-3 border-top">

                <div>
                    <span class="text-muted small fw-bold">
                        Trang @pageIndex / @totalPages
                    </span>
                </div>

                <div class="d-flex align-items-center gap-2">
                    <a asp-action="Index"
                       asp-route-activeTab="report"
                       asp-route-pageNumber="1"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-startDate="@ViewData["StartDate"]"
                       asp-route-endDate="@ViewData["EndDate"]"
                       class="btn btn-sm btn-outline-secondary @(pageIndex == 1 ? "disabled" : "")">
                        <i class="bi bi-chevron-double-left"></i>
                    </a>

                    <a asp-action="Index"
                       asp-route-activeTab="report"
                       asp-route-pageNumber="@(pageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-startDate="@ViewData["StartDate"]"
                       asp-route-endDate="@ViewData["EndDate"]"
                       class="btn btn-sm btn-outline-secondary @prevDisabled">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>

                    <a asp-action="Index"
                       asp-route-activeTab="report"
                       asp-route-pageNumber="@(pageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-startDate="@ViewData["StartDate"]"
                       asp-route-endDate="@ViewData["EndDate"]"
                       class="btn btn-sm btn-outline-secondary @nextDisabled">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>

                    <a asp-action="Index"
                       asp-route-activeTab="report"
                       asp-route-pageNumber="@totalPages"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-startDate="@ViewData["StartDate"]"
                       asp-route-endDate="@ViewData["EndDate"]"
                       class="btn btn-sm btn-outline-secondary @(pageIndex == totalPages ? "disabled" : "")">
                        <i class="bi bi-chevron-double-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</div>