@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-primary text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Tổng Số Phiếu</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["TotalCount"]</span> ticket</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-danger text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Máy Hư Hỏng</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["BrokenCount"]</span> thiết bị</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-warning text-dark h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đang Sửa Chữa</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["ProcessingCount"]</span> thiết bị</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-success text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đã Sửa Xong</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["FixedCount"]</span> thiết bị</div></div></div></div>
</div>

<div class="card shadow-sm border-0 animate__animated animate__fadeIn">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0 text-primary">Danh sách cần xử lý</h5>
        <form asp-action="Index" method="get" class="d-flex" style="max-width: 300px;">
            <input type="hidden" name="activeTab" value="repair" />
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control form-control-sm" placeholder="Nhập mã Ticket...">
            <button class="btn btn-primary btn-sm ms-2" type="submit">Tìm</button>
        </form>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Mã Ticket</th>
                    <th>Thiết bị</th>
                    <th>Mô tả lỗi</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@item.Id</span></td>
                            <td class="fw-bold">@item.Laptop?.Name <div class="small text-muted fw-normal">ID: @item.LaptopId</div></td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.StatusId == 3 || item.StatusId == 11)
                                {
                                    <span class="badge bg-danger">Hư hỏng</span>
                                }
                                else if (item.StatusId == 4)
                                {

                                    <span class="badge bg-warning text-dark">Đang sửa</span>
                                }
                                else if (item.StatusId == 5)
                                {

                                    <span class="badge bg-success">Đã sửa xong</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">@item.StatusId</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm px-3">Xử lý</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="6" class="text-center py-5 text-muted">Không tìm thấy dữ liệu.</td></tr>
                }
            </tbody>
        </table>

        @{
            var pageIndex = Model?.PageIndex ?? 1;
            var totalPages = Model?.TotalPages ?? 1;
            var prevDis = !(Model?.HasPreviousPage ?? false) ? "disabled" : "";
            var nextDis = !(Model?.HasNextPage ?? false) ? "disabled" : "";
        }

        <div class="d-flex justify-content-between p-3 border-top">
            <span class="text-muted small">Trang @pageIndex / @totalPages</span>
            <div>
                <a asp-action="Index"
                   asp-route-activeTab="repair"
                   asp-route-pageNumber="@(pageIndex - 1)"
                   class="btn btn-sm btn-outline-secondary @prevDis">
                    Trước
                </a>
                <a asp-action="Index"
                   asp-route-activeTab="repair"
                   asp-route-pageNumber="@(pageIndex + 1)"
                   class="btn btn-sm btn-outline-secondary @nextDis">
                    Sau
                </a>
            </div>
        </div>
    </div>
</div>