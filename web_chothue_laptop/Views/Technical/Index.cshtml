@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>

@{
    ViewData["Title"] = "Technical Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var inspectionList = ViewBag.InspectionList as List<web_chothue_laptop.Models.TechnicalTicket>;

    // Xử lý Active Tab
    string activeTab = ViewBag.ActiveTab as string ?? "inspection";
    string tabInspectClass = activeTab == "inspection" ? "active" : "";
    string tabInspectContent = activeTab == "inspection" ? "show active" : "";
    string tabRepairClass = activeTab == "repair" ? "active" : "";
    string tabRepairContent = activeTab == "repair" ? "show active" : "";
}

<div class="container-fluid px-4 py-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-1">Technical</h2>
            <p class="text-muted mb-0">Danh sách thiết bị cần xử lý</p>
        </div>
        <a asp-action="Report" class="btn btn-outline-primary">
            <i class="bi bi-file-earmark-text"></i> Báo Cáo Sửa Chữa
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-primary text-white h-100 shadow-sm" style="min-height: 120px;">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75">Tổng Số Phiếu</div>
                    <div class="mt-2">
                        <span class="fs-1 fw-bold">@ViewData["TotalCount"]</span>
                        <span class="fs-6">ticket</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-danger text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75">Máy Hư Hỏng</div>
                    <div class="mt-2">
                        <span class="fs-1 fw-bold">@ViewData["BrokenCount"]</span>
                        <span class="fs-6">thiết bị</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-warning text-dark h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75">Đang Sửa Chữa</div>
                    <div class="mt-2">
                        <span class="fs-1 fw-bold">@ViewData["ProcessingCount"]</span>
                        <span class="fs-6">thiết bị</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card bg-success text-white h-100 shadow-sm">
                <div class="card-body">
                    <div class="text-uppercase small fw-bold opacity-75">Đã Sửa Xong</div>
                    <div class="mt-2">
                        <span class="fs-1 fw-bold">@ViewData["FixedCount"]</span>
                        <span class="fs-6">thiết bị</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <ul class="nav nav-tabs mb-3" id="techTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-bold @tabInspectClass" id="inspection-tab" data-bs-toggle="tab" data-bs-target="#inspection" type="button">
                Yêu Cầu Kiểm Tra
                @if (inspectionList != null && inspectionList.Count > 0)
                {
                    <span class="badge bg-danger ms-2">@inspectionList.Count</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-bold @tabRepairClass" id="repair-tab" data-bs-toggle="tab" data-bs-target="#repair" type="button">
                Danh Sách Sửa Chữa
            </button>
        </li>
    </ul>

    <div class="tab-content" id="techTabsContent">

        <div class="tab-pane fade @tabInspectContent" id="inspection" role="tabpanel">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary">Danh sách thiết bị cần kiểm tra</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Mã Ticket</th>
                                <th>Thiết bị</th>
                                <th>Chủ Máy (Student)</th>
                                <th>Mô Tả</th>
                                <th class="text-center">Hành Động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (inspectionList != null && inspectionList.Any())
                            {
                                foreach (var item in inspectionList)
                                {
                                    <tr>
                                        <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@item.Id</span></td>
                                        <td class="fw-bold">
                                            @item.Laptop?.Name
                                            <div class="small text-muted fw-normal">Device ID: @item.LaptopId</div>
                                        </td>
                                        <td>
                                            @(item.Laptop?.Student?.LastName + " " + item.Laptop?.Student?.FirstName)
                                        </td>
                                        <td>@item.Description</td>
                                        <td class="text-center">
                                            <form asp-action="ApproveLaptop" method="post" class="d-inline">
                                                <input type="hidden" name="ticketId" value="@item.Id" />
                                                <button type="submit" class="btn btn-primary btn-sm px-3" onclick="return confirm('Xác nhận ĐẠT?')">
                                                    Đạt
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-outline-danger btn-sm px-3 ms-1" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.Id">
                                                Loại
                                            </button>

                                            <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <form asp-action="RejectLaptop" method="post">
                                                        <div class="modal-content">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">Từ chối Ticket #@item.Id</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body text-start">
                                                                <input type="hidden" name="ticketId" value="@item.Id" />
                                                                <label class="form-label">Lý do từ chối:</label>
                                                                <textarea name="reason" class="form-control" rows="3" required></textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-danger">Xác Nhận</button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center py-5 text-muted">Không có yêu cầu kiểm tra mới.</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="tab-pane fade @tabRepairContent" id="repair" role="tabpanel">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 text-primary">Danh sách thiết bị cần sửa</h5>
                    <form asp-action="Index" method="get" class="d-flex" style="max-width: 300px;">
                        <input type="hidden" name="activeTab" value="repair" />
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control form-control-sm" placeholder="Nhập mã Ticket (VD: 3)...">
                        <button class="btn btn-primary btn-sm ms-2" type="submit">Tìm</button>
                    </form>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Mã Ticket</th>
                                <th>Thiết bị</th>
                                <th>Mô tả lỗi</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@item.Id</span></td>
                                        <td class="fw-bold">
                                            @item.Laptop?.Name
                                            <div class="small text-muted fw-normal">Device ID: @item.LaptopId</div>
                                        </td>
                                        <td>@item.Description</td>
                                        <td>@item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @if (item.StatusId == 3 || item.StatusId == 11)
                                            {
                                                <span class="badge bg-danger">Hư hỏng</span>
                                            }
                                            else if (item.StatusId == 4)
                                            {

                                                <span class="badge bg-warning text-dark">Đang sửa</span>
                                            }
                                            else if (item.StatusId == 5)
                                            {

                                                <span class="badge bg-success">Đã sửa xong</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-secondary">@item.StatusId</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm px-3">
                                                Xử lý
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6" class="text-center py-5 text-muted">Không tìm thấy phiếu sửa chữa nào.</td></tr>
                            }
                        </tbody>
                    </table>

                    @{
                        var hasPrevious = Model?.HasPreviousPage ?? false;
                        var hasNext = Model?.HasNextPage ?? false;
                        var prevDisabled = !hasPrevious ? "disabled" : "";
                        var nextDisabled = !hasNext ? "disabled" : "";
                        var pageIndex = Model?.PageIndex ?? 1;
                        var totalPages = Model?.TotalPages ?? 1;
                    }

                    <div class="d-flex justify-content-between align-items-center p-3 border-top">
                        <span class="text-muted small">Đang xem trang @pageIndex trên tổng số @totalPages trang</span>
                        <div>
                            <a asp-action="Index" asp-route-pageNumber="@(pageIndex - 1)" asp-route-activeTab="repair" class="btn btn-sm btn-outline-secondary me-2 @prevDisabled">Trước</a>
                            <a asp-action="Index" asp-route-pageNumber="@(pageIndex + 1)" asp-route-activeTab="repair" class="btn btn-sm btn-outline-secondary @nextDisabled">Sau</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>