@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>
@using web_chothue_laptop.Helpers

@{
    ViewData["Title"] = "Technical Dashboard";

    // Lấy dữ liệu riêng cho Tab Inspection (vì tab này dùng ViewBag chứ không dùng Model chính)
    var inspectionList = ViewBag.InspectionList as web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>;
    var inspectionTotalCount = ViewBag.InspectionTotalCount != null ? (int)ViewBag.InspectionTotalCount : 0;

    // Xác định Tab đang active
    string activeTab = ViewBag.ActiveTab as string ?? "inspection";
}

<style>
    /* CSS Cấu trúc Layout */
    .container, .container-fluid, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .tech-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    /* Sidebar Styles */
    .tech-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
            cursor: pointer;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

    /* Content Styles */
    .tech-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }

    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table td {
        vertical-align: middle;
    }

    .text-wrap {
        word-wrap: break-word;
        word-break: break-word;
    }
</style>

<div class="tech-wrapper">
    <div class="tech-sidebar">
        <div class="sidebar-header"><i class="fas fa-tools"></i> Technical</div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", new { activeTab = "inspection" })" class="@(activeTab == "inspection" ? "active" : "")">
                <i class="fas fa-clipboard-check"></i> Yêu Cầu Kiểm Tra
                @if (inspectionTotalCount > 0)
                {
                    <span class="badge bg-danger ms-auto">@inspectionTotalCount</span>
                }
            </a>

            <a href="@Url.Action("Index", new { activeTab = "repair" })" class="@(activeTab == "repair" ? "active" : "")">
                <i class="fas fa-screwdriver"></i> Danh Sách Sửa Chữa 
            </a>

            <a href="@Url.Action("Index", new { activeTab = "support" })" class="@(activeTab == "support" ? "active" : "")">
                <i class="fas fa-headset"></i> Hỗ Trợ Khách Hàng
            </a>

            <a href="@Url.Action("Index", new { activeTab = "report" })" class="@(activeTab == "report" ? "active" : "")">
                <i class="fas fa-file-invoice"></i> Báo Cáo Sửa Chữa
            </a>
        </div>
    </div>

    <div class="tech-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                @if (activeTab == "inspection")
                {
                    <h3 class="fw-bold text-primary mb-1">Yêu Cầu Kiểm Tra</h3>
                    <p class="text-muted mb-0">Danh sách máy mới nhập kho cần kiểm tra chất lượng</p>
                }
                else if (activeTab == "repair")
                {
                    <h3 class="fw-bold text-primary mb-1">Danh Sách Sửa Chữa</h3>
                    <p class="text-muted mb-0">Quản lý sửa chữa máy trong kho</p>
                }
                else if (activeTab == "support")
                {
                    <h3 class="fw-bold text-primary mb-1">Hỗ Trợ Khách Hàng</h3>
                    <p class="text-muted mb-0">Xử lý sự cố máy đang cho thuê</p>
                }
                else if (activeTab == "report")
                {
                    <h3 class="fw-bold text-primary mb-1">Báo Cáo Sửa Chữa</h3>
                    <p class="text-muted mb-0">Lịch sử và thống kê thiết bị hoàn thành</p>
                }
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (activeTab == "inspection")
        {
            <partial name="InspectionList" model="inspectionList" />
        }
        else if (activeTab == "repair")
        {
            <partial name="RepairList" model="Model" />
        }
        else if (activeTab == "support")
        {
            <partial name="SupportList" model="Model" />
        }
        else if (activeTab == "report")
        {
            <partial name="ReportList" model="Model" />
        }
    </div>
</div>