@model web_chothue_laptop.Models.TechnicalTicket

@{
    ViewData["Title"] = "Xử lý sự cố";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-screwdriver"></i> Cập nhật phiếu sửa chữa #@Model.Id</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LaptopId" />
                <input type="hidden" asp-for="StaffId" />
                <input type="hidden" asp-for="CreatedDate" />

                <div class="row">
                    <div class="col-md-5 border-end">
                        <h5 class="text-secondary">Thông tin thiết bị</h5>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên Laptop:</label>
                            <input type="text" class="form-control" value="@Model.Laptop?.Name" readonly disabled />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả lỗi ban đầu:</label>
                            <textarea class="form-control bg-light text-danger" rows="4" readonly disabled>@Model.Description</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Người tạo ticket:</label>
                            <input type="text" class="form-control" value="Staff ID: @Model.StaffId" readonly disabled />
                        </div>
                    </div>

                    <div class="col-md-7">
                        <h5 class="text-success">Khu vực kỹ thuật</h5>

                        <div class="mb-3">
                            <label asp-for="StatusId" class="form-label fw-bold">Trạng thái xử lý:</label>
                            <select asp-for="StatusId" class="form-select" id="statusSelect">
                                <option value="3">Hư hỏng - Chờ sửa</option>
                                <option value="4">Đang sửa chữa</option>
                                <option value="5">Đã sửa xong - Có thể thuê</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TechnicalResponse" class="form-label fw-bold">Ghi chú kỹ thuật:</label>
                            <textarea asp-for="TechnicalResponse" class="form-control" rows="5" placeholder="Ví dụ: Đã thay màn hình mới, đang cài lại Driver..."></textarea>
                            <span asp-validation-for="TechnicalResponse" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Kỹ thuật viên phụ trách:</label>
                            <input type="text" class="form-control" value="Nhật Minh" readonly disabled />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Cập nhật tiến độ
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Script nhỏ để đổi màu select box dựa trên value (Optional)
        $(document).ready(function() {
            function updateColor() {
                var val = $('#statusSelect').val();
                $('#statusSelect').removeClass('text-danger text-warning text-success');
                if (val == '3') $('#statusSelect').addClass('text-danger fw-bold');
                if (val == '4') $('#statusSelect').addClass('text-warning fw-bold');
                if (val == '5') $('#statusSelect').addClass('text-success fw-bold');
            }
            $('#statusSelect').change(updateColor);
            updateColor(); // Run on load
        });
    </script>
}
