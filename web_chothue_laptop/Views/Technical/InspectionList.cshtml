﻿@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-primary text-white h-100 shadow-sm">
            <div class="card-body">
                <div class="text-uppercase small fw-bold opacity-75">Tổng Số Phiếu</div>
                <div class="mt-2"><span class="fs-1 fw-bold">@ViewData["TotalCount"]</span> ticket</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-danger text-white h-100 shadow-sm">
            <div class="card-body">
                <div class="text-uppercase small fw-bold opacity-75">Máy Hư Hỏng</div>
                <div class="mt-2"><span class="fs-1 fw-bold">@ViewData["BrokenCount"]</span> thiết bị</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-warning text-dark h-100 shadow-sm">
            <div class="card-body">
                <div class="text-uppercase small fw-bold opacity-75">Đang Sửa Chữa</div>
                <div class="mt-2"><span class="fs-1 fw-bold">@ViewData["ProcessingCount"]</span> thiết bị</div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card bg-success text-white h-100 shadow-sm">
            <div class="card-body">
                <div class="text-uppercase small fw-bold opacity-75">Đã Sửa Xong</div>
                <div class="mt-2"><span class="fs-1 fw-bold">@ViewData["FixedCount"]</span> thiết bị</div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 animate__animated animate__fadeIn">

    <div class="card-header bg-white p-3 border-bottom">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <input type="hidden" name="activeTab" value="inspection" />
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0 ps-0 bg-light"
                           placeholder="Tìm theo TicketID, Tên Laptop, Tên SV..."
                           value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </div>
            <div class="col-md-auto ms-auto">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                {
                    <a asp-action="Index" asp-route-activeTab="inspection" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-times"></i> Xóa lọc
                    </a>
                }
            </div>
        </form>
    </div>

    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Mã Ticket</th>
                    <th>Thiết bị</th>
                    <th>Chủ Máy</th>
                    <th>Mô Tả</th>
                    <th class="text-center">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        // Kiểm tra xem Laptop có đang chờ Student đồng ý không (StatusId = 4 - Fixing)
                        bool isWaitingStudentApproval = item.Laptop?.StatusId == 4;
                        
                        <tr>
                            <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@item.Id</span></td>
                            <td class="fw-bold">
                                @item.Laptop?.Name 
                                <div class="small text-muted fw-normal">ID: @item.LaptopId</div>
                                @if (isWaitingStudentApproval)
                                {
                                    <div class="small text-warning fw-bold mt-1">
                                        <i class="fas fa-exclamation-triangle"></i> Chờ Student đồng ý
                                    </div>
                                }
                            </td>
                            <td>@(item.Laptop?.Student?.LastName + " " + item.Laptop?.Student?.FirstName)</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                @if (isWaitingStudentApproval)
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2">
                                        <i class="fas fa-hourglass-half"></i> Chờ xác nhận
                                    </span>
                                }
                                else
                                {
                                    <a asp-action="InspectionDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm px-3 text-white me-1">Chi tiết</a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center py-5 text-muted">Không tìm thấy yêu cầu kiểm tra nào.</td></tr>
                }
            </tbody>
        </table>

        @if (Model != null)
        {
            var prevDis = !Model.HasPreviousPage ? "disabled" : "";
            var nextDis = !Model.HasNextPage ? "disabled" : "";
            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                <span class="text-muted small">Trang @Model.PageIndex / @Model.TotalPages</span>
                <div>
                    <a asp-action="Index" asp-route-activeTab="inspection" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-sm btn-outline-secondary @prevDis"><i class="bi bi-chevron-left"></i> Trước</a>
                    <a asp-action="Index" asp-route-activeTab="inspection" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-sm btn-outline-secondary @nextDis">Sau <i class="bi bi-chevron-right"></i></a>
                </div>
            </div>
        }
    </div>
</div>