@model web_chothue_laptop.Models.PaginatedList<web_chothue_laptop.Models.TechnicalTicket>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-primary text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Tổng Số Phiếu</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["TotalCount"]</span> ticket</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-danger text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Máy Hư Hỏng</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["BrokenCount"]</span> thiết bị</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-warning text-dark h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đang Sửa Chữa</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["ProcessingCount"]</span> thiết bị</div></div></div></div>
    <div class="col-xl-3 col-md-6 mb-3"><div class="card bg-success text-white h-100 shadow-sm"><div class="card-body"><div class="text-uppercase small fw-bold opacity-75">Đã Sửa Xong</div><div class="mt-2"><span class="fs-1 fw-bold">@ViewData["FixedCount"]</span> thiết bị</div></div></div></div>
</div>

<div class="card shadow-sm border-0 animate__animated animate__fadeIn">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Mã Ticket</th>
                    <th>Thiết bị</th>
                    <th>Chủ Máy</th>
                    <th>Mô Tả</th>
                    <th class="text-center">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4"><span class="badge bg-secondary rounded-pill">#@item.Id</span></td>
                            <td class="fw-bold">@item.Laptop?.Name <div class="small text-muted fw-normal">ID: @item.LaptopId</div></td>
                            <td>@(item.Laptop?.Student?.LastName + " " + item.Laptop?.Student?.FirstName)</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                <a asp-action="InspectionDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm px-3 text-white me-1">Chi tiết</a>
                                <div class="modal fade" id="rejectModal-@item.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <form asp-action="RejectLaptop" method="post">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Từ chối Ticket #@item.Id</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-start">
                                                    <input type="hidden" name="ticketId" value="@item.Id" />
                                                    <label class="form-label">Lý do từ chối:</label>
                                                    <textarea name="reason" class="form-control" rows="3" required></textarea>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-danger">Xác Nhận</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center py-5 text-muted">Không có yêu cầu kiểm tra mới.</td></tr>
                }
            </tbody>
        </table>

        @if (Model != null)
        {
            var prevDis = !Model.HasPreviousPage ? "disabled" : "";
            var nextDis = !Model.HasNextPage ? "disabled" : "";
            <div class="d-flex justify-content-between align-items-center p-3 border-top">
                <span class="text-muted small">Trang @Model.PageIndex / @Model.TotalPages</span>
                <div>
                    <a asp-action="Index" asp-route-activeTab="inspection" asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-sm btn-outline-secondary @prevDis"><i class="bi bi-chevron-left"></i> Trước</a>
                    <a asp-action="Index" asp-route-activeTab="inspection" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-sm btn-outline-secondary @nextDis">Sau <i class="bi bi-chevron-right"></i></a>
                </div>
            </div>
        }
    </div>
</div>