@{
    Layout = null;
    var current = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Manager</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .manager-wrapper {
            display: flex;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .manager-sidebar {
            width: 260px;
            background: #fff;
            border-right: 1px solid #dee2e6;
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
        }

        .sidebar-header {
            background-color: #0d6efd;
            color: white;
            padding: 20px;
            font-weight: bold;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-menu {
            padding-top: 10px;
        }

            .sidebar-menu a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 15px 20px;
                color: #495057;
                text-decoration: none;
                transition: 0.2s;
                border-left: 5px solid transparent;
                font-weight: 500;
            }

                .sidebar-menu a:hover {
                    background-color: #f1f4f9;
                    color: #0d6efd;
                }

                .sidebar-menu a.active {
                    background-color: #e7f1ff;
                    color: #0d6efd;
                    font-weight: bold;
                    border-left-color: #0d6efd;
                }

        .manager-content {
            flex-grow: 1;
            padding: 30px;
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="manager-wrapper">
        <div class="manager-sidebar">
            <div class="sidebar-header">
                <i class="fas fa-user-cog"></i> Manager Dashboard
            </div>
            <div class="sidebar-menu">
                <a href="@Url.Action("LaptopManagement", "Manager")" class="@(current == "LaptopManagement" ? "active" : "")">
                    <i class="fas fa-laptop"></i> Quản lý Laptop
                </a>
                <a href="@Url.Action("LaptopRequests", "Manager")" class="@(current == "LaptopRequests" ? "active" : "")">
                    <i class="fas fa-upload"></i> Đơn từ Sinh viên
                </a>
                <a href="@Url.Action("CustomerBookings", "Manager")" class="@(current == "CustomerBookings" ? "active" : "")">
                    <i class="fas fa-user"></i> Đơn từ Khách hàng
                </a>
                <a href="@Url.Action("StaffList", "Manager")" class="@(current == "StaffList" ? "active" : "")">
                    <i class="fas fa-users"></i> Nhân viên
                </a>
            </div>
        </div>
        <div class="manager-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
