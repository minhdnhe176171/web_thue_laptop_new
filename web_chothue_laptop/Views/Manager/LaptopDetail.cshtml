@model web_chothue_laptop.Models.Laptop
@{
    ViewData["Title"] = "Chi tiết Laptop";
    Layout = "_ManagerLayout";
}
<h2>Chi tiết Laptop</h2>
<table class="table table-bordered">
    <tr>
        <th>Tên máy</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Hãng</th>
        <td>@Model.Brand?.BrandName</td>
    </tr>
    <tr>
        <th>Trạng thái</th>
        <td>@Model.Status?.StatusName</td>
    </tr>
    <tr>
        <th>Sinh viên gửi</th>
        <td>@Model.Student?.Email</td>
    </tr>
    <tr>
        <th>Ngày tạo</th>
        <td>@Model.CreatedDate?.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Giá</th>
        <td>@Model.Price?.ToString("N0") VNĐ</td>
    </tr>
</table>
@if (Model.LaptopDetails != null && Model.LaptopDetails.Any())
{
    <h4>Thông số kỹ thuật</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>CPU</th>
                <th>GPU</th>
                <th>RAM</th>
                <th>Ổ cứng</th>
                <th>Hệ điều hành</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.LaptopDetails)
            {
                <tr>
                    <td>@detail.Cpu</td>
                    <td>@detail.Gpu</td>
                    <td>@detail.RamSize</td>
                    <td>@detail.Storage</td>
                    <td>@detail.Os</td>
                </tr>
            }
        </tbody>
    </table>
}
