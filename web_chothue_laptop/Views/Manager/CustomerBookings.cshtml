@model IEnumerable<web_chothue_laptop.Models.Booking>
@{
    ViewData["Title"] = "Đơn từ Khách hàng";
    Layout = "_ManagerLayout";
    var statusList = ViewBag.StatusList as IEnumerable<dynamic>;
}
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Tổng số đơn</small>
                <h5 class="text-primary">@ViewBag.TotalBooking</h5>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Đang chờ</small>
                <h5 class="text-warning">@ViewBag.PendingBooking</h5>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Đã phê duyệt</small>
                <h5 class="text-success">@ViewBag.ApprovedBooking</h5>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Đã từ chối</small>
                <h5 class="text-danger">@ViewBag.RejectedBooking</h5>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Đang thuê</small>
                <h5 class="text-info">@ViewBag.RentingBooking</h5>
            </div>
        </div>
    </div>

    <div class="col-md-2">
        <div class="card text-center">
            <div class="card-body">
                <small>Đã đóng</small>
                <h5 class="text-secondary">@ViewBag.ClosedBooking</h5>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-success text-end">
    <strong>Doanh thu:</strong>
    @String.Format("{0:N0} đ", ViewBag.TotalRevenue)
</div>
<h2 class="mb-4">Đơn thuê từ Khách hàng</h2>
<form method="get" asp-action="CustomerBookings" class="mb-3">
    <input type="text"
           name="searchString"
           value="@ViewBag.SearchString"
           placeholder="Tìm email khách hàng hoặc laptop..."
           class="form-control d-inline-block w-auto" />

    <select name="statusId" class="form-select d-inline-block w-auto">
        <option value="0">Tất cả trạng thái</option>
        @if (statusList != null)
        {
            @foreach (var status in statusList)
            {
                var isSelected = ViewBag.SelectedStatus == status.Id;
                <option value="@status.Id" selected="@(isSelected ? "selected" : null)">
                    @status.StatusName
                </option>
            }
        }
    </select>

    <button type="submit" class="btn btn-primary">Lọc</button>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Email</th>
            <th>Laptop</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>RENTAL-@item.Id</td>
                <td>@item.Customer?.FirstName @item.Customer?.LastName</td>
                <td>@item.Customer?.Email</td>
                <td>@item.Laptop?.Name</td>
                <td>
                    @switch (item.StatusId)
                    {
                        case 1:
                            <span class="badge bg-warning text-dark">Đang chờ</span>
                            break;
                        case 2:
                            <span class="badge bg-success">Đã phê duyệt</span>
                            break;
                        case 3:
                            <span class="badge bg-danger">Đã từ chối</span>
                            break;
                        case 4:
                            <span class="badge bg-orange">Đang sửa chữa</span>
                            break;
                        case 5:
                            <span class="badge bg-purple">Đã sửa chữa</span>
                            break;
                        case 6:
                            <span class="badge bg-primary">Đang hoạt động</span>
                            break;
                        case 7:
                            <span class="badge bg-secondary">Ngừng hoạt động</span>
                            break;
                        case 8:
                            <span class="badge bg-dark">Đã đóng</span>
                            break;
                        case 9:
                            <span class="badge bg-teal">Có sẵn</span>
                            break;
                        case 10:
                            <span class="badge bg-purple">Đang thuê</span>
                            break;
                        default:
                            <span class="badge bg-light text-dark">Unknown</span>
                            break;
                    }
                </td>
                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
<nav class="mt-4">
    <ul class="pagination justify-content-center">

        <!-- Previous -->
        <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link"
               asp-action="CustomerBookings"
               asp-route-page="@(ViewBag.CurrentPage - 1)">
                Trước
            </a>
        </li>

        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link"
                   asp-action="CustomerBookings"
                   asp-route-page="@i">
                    @i
                </a>
            </li>
        }

        <!-- Next -->
        <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link"
               asp-action="CustomerBookings"
               asp-route-page="@(ViewBag.CurrentPage + 1)">
                Sau
            </a>
        </li>

    </ul>
</nav>