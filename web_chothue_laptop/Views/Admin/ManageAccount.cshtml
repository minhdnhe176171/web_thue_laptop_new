                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-controller="ManageAccount" asp-action="@actionName"
                                           asp-route-filterStatus="@ViewBag.FilterStatus"
                                           asp-route-searchAccount="@ViewBag.SearchAccount"
                                           asp-route-page="@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // T·ª± ƒë·ªông l·ªçc khi b·∫•m Enter trong √¥ t√¨m ki·∫øm
            $('#searchAccount').on('keypress', function(e) {
                if (e.which === 13) { // Enter key
                    e.preventDefault();
                    $('#filterForm').submit();
                }
            });

            // T·ª± ƒë·ªông l·ªçc khi thay ƒë·ªïi dropdown
            $('#filterStatus').on('change', function() {
                $('#filterForm').submit();
            });
        });

        function toggleStatus(userId, currentStatusId) {
            const action = currentStatusId == 6 ? 'kh√≥a' : 'm·ªü kh√≥a';
            if (confirm(`B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën ${action} t√†i kho·∫£n n√†y?`)) {
                $.ajax({
                    url: '@Url.Action("ToggleStatus", "ManageAccount")',
                    type: 'POST',
                    data: {
                        userId: userId
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('ƒê√£ x·∫£y ra l·ªói. Vui l√≤ng th·ª≠ l·∫°i.');
                    }
