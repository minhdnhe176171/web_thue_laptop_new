                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    int stt = ((ViewBag.CurrentPage - 1) * 10) + 1;
                                    @foreach (var account in Model)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@account.Email</td>
                                            <td>@account.FullName</td>
                                            <td>@account.RoleName</td>
                                            <td>
                                                @if (account.StatusId == 6)
                                                {
                                                    <span class="badge bg-success">ƒêang ho·∫°t ƒë·ªông</span>
                                                }
                                                else if (account.StatusId == 7)
                                                {
                                                    <span class="badge bg-danger">ƒê√£ kh√≥a</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@account.StatusName</span>
                                                }
                                            </td>
                                            <td>@account.CreatedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <button type="button" class="btn btn-sm @(account.StatusId == 6 ? "btn-warning" : "btn-success")"
                                                        onclick="toggleStatus(@account.UserId, @account.StatusId)">
                                                    @(account.StatusId == 6 ? "üîí Kh√≥a" : "üîì M·ªü kh√≥a")
                                                </button>
                                            </td>
