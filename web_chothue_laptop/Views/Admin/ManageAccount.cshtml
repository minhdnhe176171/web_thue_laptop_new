                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">T√¨m ki·∫øm</button>
                                <a asp-controller="ManageAccount" asp-action="@actionName" class="btn btn-secondary">L√†m m·ªõi</a>
                            </div>
                        </div>
                    </form>

                    <!-- Accounts Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>STT</th>
                                    <th>Email</th>
                                    <th>H·ªç t√™n</th>
                                    <th>Vai tr√≤</th>
                                    <th>Tr·∫°ng th√°i</th>
                                    <th>Ng√†y t·∫°o</th>
                                    <th>Thao t√°c</th>
                                </tr>
