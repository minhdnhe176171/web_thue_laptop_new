@model IEnumerable<web_chothue_laptop.Models.Laptop>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Laptop của tôi";
    var currentStatus = ViewBag.CurrentStatus as string;
}

@functions {
    private static string TranslateStatus(string? name) => name?.ToLower() switch
    {
        "pending" => "Đang chờ xử lý",
        "đang chờ xử lý" => "Đang chờ xử lý",
        "approved" => "Đã phê duyệt",
        "rejected" => "Bị từ chối",
        _ => name ?? string.Empty
    };
}

<h2>Laptop của tôi</h2>

<!-- Thanh lọc theo trạng thái -->
<div class="mb-3">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link @(string.IsNullOrEmpty(currentStatus) ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Index"
               asp-route-search="@ViewBag.Search">
                Tất cả (@(ViewBag.TotalCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus?.ToLower() == "pending" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Index"
               asp-route-status="pending"
               asp-route-search="@ViewBag.Search">
                Đang chờ xử lý (@(ViewBag.PendingCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus?.ToLower() == "approved" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Index"
               asp-route-status="approved"
               asp-route-search="@ViewBag.Search">
                Đã phê duyệt (@(ViewBag.ApprovedCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentStatus?.ToLower() == "rejected" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Index"
               asp-route-status="rejected"
               asp-route-search="@ViewBag.Search">
                Bị từ chối (@(ViewBag.RejectedCount ?? 0))
            </a>
        </li>
    </ul>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-primary" asp-controller="Student" asp-action="Create">Tạo laptop cho thuê</a>
        <a class="btn btn-secondary" asp-controller="Student" asp-action="Report">Báo cáo</a>
    </div>
    <form method="get" class="d-flex" style="width:360px;">
        <input type="hidden" name="status" value="@currentStatus" />
        <input type="search" name="search" value="@(ViewBag.Search ?? "")" class="form-control" placeholder="Tìm tên hoặc hãng" />
        <button class="btn btn-outline-secondary ms-2" type="submit">Tìm</button>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @if (string.IsNullOrEmpty(currentStatus))
        {
            <p>Bạn chưa có laptop nào.</p>
        }
        else
        {
            <p>Không có laptop nào ở trạng thái "@TranslateStatus(currentStatus)"</p>
        }
    </div>
}
else
{
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Tên</th>
                <th>Hãng</th>
                <th class="text-end">Giá</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-center">Đến hạn</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var l in Model)
    {
        <tr>
            <td>@l.Name</td>
            <td>@l.Brand?.BrandName</td>
            <td class="text-end">@(l.Price?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "-")</td>
            <td class="text-center">@(l.CreatedDate?.ToString("dd/MM/yyyy") ?? "-")</td>
            <td class="text-center">
                @if (l.UpdatedDate.HasValue)
                {
                    <span class="@(l.UpdatedDate.Value < DateTime.Today ? "text-danger fw-bold" : "")">
                        @l.UpdatedDate.Value.ToString("dd/MM/yyyy")
                        @if (l.UpdatedDate.Value < DateTime.Today)
                        {
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        }
                    </span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td class="text-center">
                <span class="badge 
                    @(l.Status?.StatusName?.ToLower() switch 
                    {
                        "pending" => "bg-warning text-dark",
                        "approved" => "bg-success",
                        "rejected" => "bg-danger",
                        _ => "bg-secondary"
                    })">
                    @TranslateStatus(l.Status?.StatusName)
                </span>
            </td>
            <td class="text-center">
                <a class="btn btn-sm btn-info me-1" asp-controller="Student" asp-action="Details" asp-route-id="@l.Id">
                    <i class="bi bi-eye"></i> Xem chi tiết
                </a>
                <form asp-action="Delete" asp-route-id="@l.Id" asp-controller="Student" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa laptop này không?');">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-sm btn-danger" type="submit">
                        <i class="bi bi-trash"></i> Xóa
                    </button>
                </form>
            </td>
        </tr>
    }
        </tbody>
    </table>
}
