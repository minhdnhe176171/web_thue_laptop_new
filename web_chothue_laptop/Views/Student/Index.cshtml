@model IEnumerable<web_chothue_laptop.Models.Laptop>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Trang tạo đơn cho thuê laptop";
    var currentPage = ViewBag.CurrentPage as string ?? "All";
    
    // Pagination settings
    int pageSize = 5;
    int page = ViewBag.Page ?? 1;
    var laptopsPaged = Model.Skip((page - 1) * pageSize).Take(pageSize).ToList();
    int totalPages = (int)Math.Ceiling(Model.Count() / (double)pageSize);
}

@functions {
    private static string TranslateStatus(string? name) => name?.ToLower() switch
    {
        "pending" => "Đang chờ xử lý",
        "approved" => "Đã phê duyệt",
        "rejected" => "Bị từ chối",
        _ => name ?? string.Empty
    };
}

<h2>Laptop của tôi</h2>

<!-- Thanh navigation - 4 trang riêng biệt -->
<div class="mb-3">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link @(currentPage == "All" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Index"
               asp-route-search="@ViewBag.Search">
                Tất cả (@(ViewBag.TotalCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentPage == "Pending" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Pending"
               asp-route-search="@ViewBag.Search">
                Đang chờ xử lý (@(ViewBag.PendingCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentPage == "Approved" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Approved"
               asp-route-search="@ViewBag.Search">
                Đã phê duyệt (@(ViewBag.ApprovedCount ?? 0))
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(currentPage == "Rejected" ? "active" : "")" 
               asp-controller="Student" 
               asp-action="Rejected"
               asp-route-search="@ViewBag.Search">
                Bị từ chối (@(ViewBag.RejectedCount ?? 0))
            </a>
        </li>
    </ul>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn btn-primary" asp-controller="Student" asp-action="Create">Tạo laptop cho thuê</a>
        <a class="btn btn-success" asp-controller="Student" asp-action="MyRentals">
            <i class="fas fa-handshake"></i> Laptop Đang Cho Thuê
        </a>
        <a class="btn btn-secondary" asp-controller="Student" asp-action="Report">Báo cáo</a>
    </div>
    <form method="get" class="d-flex" style="width:360px;">
        <input type="search" name="search" value="@(ViewBag.Search ?? "")" class="form-control" placeholder="Tìm tên hoặc hãng" />
        <button class="btn btn-outline-secondary ms-2" type="submit">Tìm</button>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        @if (currentPage == "All")
        {
            <p>Bạn chưa có laptop nào.</p>
        }
        else if (currentPage == "Pending")
        {
            <p>Không có laptop nào đang chờ xử lý</p>
        }
        else if (currentPage == "Approved")
        {
            <p>Không có laptop nào đã phê duyệt</p>
        }
        else if (currentPage == "Rejected")
        {
            <p>Không có laptop nào bị từ chối</p>
        }
    </div>
}
else
{
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Tên</th>
                <th>Hãng</th>
                <th class="text-end">Giá</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-center">Đến hạn</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var l in laptopsPaged)
    {
        <tr>
            <td>@l.Name</td>
            <td>@l.Brand?.BrandName</td>
            <td class="text-end">@(l.Price?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "-")</td>
            <td class="text-center">@(l.CreatedDate?.ToString("dd/MM/yyyy") ?? "-")</td>
            <td class="text-center">
                @if (l.EndTime.HasValue)
                {
                    <span class="@(l.EndTime.Value < DateTime.Today ? "text-danger fw-bold" : "")">
                        @l.EndTime.Value.ToString("dd/MM/yyyy")
                        @if (l.EndTime.Value < DateTime.Today)
                        {
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        }
                    </span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td class="text-center">
                <span class="@(l.Status?.StatusName?.ToLower() switch 
                    {
                        "pending" => "text-black fw-bold",
                        "approved" => "text-black fw-bold",
                        "rejected" => "text-black fw-bold",
                        _ => "text-secondary fw-bold"
                    })">
                    @TranslateStatus(l.Status?.StatusName)
                </span>
            </td>
            <td class="text-center">
                <a class="btn btn-sm btn-info me-1" asp-controller="Student" asp-action="Details" asp-route-id="@l.Id">
                    <i class="bi bi-eye"></i> Xem chi tiết
                </a>
                @if (l.Status?.StatusName?.ToLower() == "pending")
                {
                    <form asp-action="Delete" asp-route-id="@l.Id" asp-controller="Student" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa laptop này không?');">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger" type="submit">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                }
            </td>
        </tr>
    }
        </tbody>
    </table>
    // them phan trang
    @* Pagination *@
    @if (totalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination pagination-sm justify-content-center">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(page - 1)@(string.IsNullOrEmpty(ViewBag.Search) ? "" : $"&search={ViewBag.Search}")">Trước</a>
                </li>
                
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" href="?page=@i@(string.IsNullOrEmpty(ViewBag.Search) ? "" : $"&search={ViewBag.Search}")">@i</a>
                    </li>
                }
                
                <li class="page-item @(page == totalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(page + 1)@(string.IsNullOrEmpty(ViewBag.Search) ? "" : $"&search={ViewBag.Search}")">Sau</a>
                </li>
            </ul>
        </nav>
    }
}
