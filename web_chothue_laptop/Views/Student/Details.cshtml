@model web_chothue_laptop.Models.Laptop
@{
    ViewData["Title"] = "Chi tiết laptop";
}

@functions {
    private static string TranslateStatus(string? name) => name?.ToLower() switch
    {
        "pending" => "Đang chờ xử lý",
        "approved" => "Đã phê duyệt",
        "rejected" => "Bị từ chối",
        _ => name ?? string.Empty
    };
}

<h2>Chi tiết laptop</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">@Model.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="border-bottom pb-2">Thông tin chung</h5>
                <dl class="row">
                    <dt class="col-sm-4">Tên laptop:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Hãng:</dt>
                    <dd class="col-sm-8">@Model.Brand?.BrandName</dd>

                    <dt class="col-sm-4">Giá thuê/ngày:</dt>
                    <dd class="col-sm-8">@(Model.Price?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "-")</dd>

                    <dt class="col-sm-4">Trạng thái:</dt>
                    <dd class="col-sm-8">
                        <span class="badge 
                            @(Model.Status?.StatusName?.ToLower() switch 
                            {
                                "pending" => "bg-warning text-dark",
                                "approved" => "bg-success",
                                "rejected" => "bg-danger",
                                _ => "bg-secondary"
                            })">
                            @TranslateStatus(Model.Status?.StatusName)
                        </span>
                    </dd>

                    <dt class="col-sm-4">Ngày tạo:</dt>
                    <dd class="col-sm-8">@(Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</dd>

                    <dt class="col-sm-4">Thời gian đến hạn:</dt>
                    <dd class="col-sm-8">
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <span class="@(Model.UpdatedDate.Value < DateTime.Today ? "text-danger fw-bold" : "")">
                                @Model.UpdatedDate.Value.ToString("dd/MM/yyyy")
                                @if (Model.UpdatedDate.Value < DateTime.Today)
                                {
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <span class="small">(Đã quá hạn)</span>
                                }
                                else
                                {
                                    var daysLeft = (Model.UpdatedDate.Value - DateTime.Today).Days;
                                    <span class="small text-muted">(Còn @daysLeft ngày)</span>
                                }
                            </span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h5 class="border-bottom pb-2">Thông số kỹ thuật</h5>
                @{
                    var detail = Model.LaptopDetails.FirstOrDefault();
                }
                @if (detail != null)
                {
                    <dl class="row">
                        @if (!string.IsNullOrEmpty(detail.Cpu))
                        {
                            <dt class="col-sm-4">CPU:</dt>
                            <dd class="col-sm-8">@detail.Cpu</dd>
                        }

                        @if (!string.IsNullOrEmpty(detail.RamSize))
                        {
                            <dt class="col-sm-4">RAM:</dt>
                            <dd class="col-sm-8">@detail.RamSize</dd>
                        }

                        @if (!string.IsNullOrEmpty(detail.Storage))
                        {
                            <dt class="col-sm-4">Lưu trữ:</dt>
                            <dd class="col-sm-8">@detail.Storage</dd>
                        }

                        @if (!string.IsNullOrEmpty(detail.Gpu))
                        {
                            <dt class="col-sm-4">GPU:</dt>
                            <dd class="col-sm-8">@detail.Gpu</dd>
                        }
                    </dl>
                }
                else
                {
                    <p class="text-muted">Chưa có thông tin chi tiết</p>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-4">
                <h5 class="border-bottom pb-2">Hình ảnh</h5>
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 400px;" />
            </div>
        }
    </div>
    <div class="card-footer">

        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa laptop này không?');">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger" type="submit">
                <i class="bi bi-trash"></i> Xóa
            </button>
        </form>
    </div>
</div>