@model IEnumerable<web_chothue_laptop.Models.Laptop>
@{
    ViewData["Title"] = "Laptop Bị Từ Chối";
    var currentPage = ViewBag.CurrentPage as string ?? "Rejected";
    
    
    int pageSize = 5;
    int page = ViewBag.Page ?? 1;
    var laptopsPaged = Model.Skip((page - 1) * pageSize).Take(pageSize).ToList();
    int totalPages = (int)Math.Ceiling(Model.Count() / (double)pageSize);
}

<style>
    .container, .body-content {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    .student-wrapper {
        display: flex;
        min-height: calc(100vh - 60px);
        background-color: #f8f9fa;
        margin-top: -1.5rem;
        padding-top: 1.5rem;
    }

    .student-sidebar {
        width: 260px;
        background: #fff;
        border-right: 1px solid #dee2e6;
        display: flex;
        flex-direction: column;
        flex-shrink: 0;
    }

    .sidebar-header {
        background-color: #0d6efd;
        color: white;
        padding: 20px;
        font-weight: bold;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-menu {
        padding-top: 10px;
    }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 15px 20px;
            color: #495057;
            text-decoration: none;
            transition: 0.2s;
            border-left: 5px solid transparent;
            font-weight: 500;
        }

            .sidebar-menu a:hover {
                background-color: #f1f4f9;
                color: #0d6efd;
            }

            .sidebar-menu a.active {
                background-color: #e7f1ff;
                color: #0d6efd;
                font-weight: bold;
                border-left-color: #0d6efd;
            }

            .sidebar-menu a .badge {
                margin-left: auto;
            }

    .student-content {
        flex-grow: 1;
        padding: 30px;
        overflow-x: auto;
    }

    .table-bordered {
        border: 1px solid #dee2e6 !important;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6 !important;
            vertical-align: middle;
        }

        .table-bordered thead th {
            border-bottom: 2px solid #dee2e6 !important;
            background-color: #f8f9fa;
            font-weight: 600;
        }

    .table td,
    .table th {
        padding: 12px 15px;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f4f9;
    }

    .reject-reason-box {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 0.75rem;
        border-radius: 4px;
        margin: 0.5rem 0;
    }
</style>

<div class="student-wrapper">
    <div class="student-sidebar">
        <div class="sidebar-header">
            <i class="fas fa-laptop"></i> Laptop của tôi
        </div>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Student", new { search = ViewBag.Search })" class="@(currentPage == "All" ? "active" : "")">
                <i class="fas fa-list"></i> 
                Tất cả
                <span class="badge bg-primary">@(ViewBag.TotalCount ?? 0)</span>
            </a>
            <a href="@Url.Action("Pending", "Student", new { search = ViewBag.Search })" class="@(currentPage == "Pending" ? "active" : "")">
                <i class="fas fa-clock"></i> 
                Đang chờ xử lý
                <span class="badge bg-warning text-dark">@(ViewBag.PendingCount ?? 0)</span>
            </a>
            <a href="@Url.Action("Approved", "Student", new { search = ViewBag.Search })" class="@(currentPage == "Approved" ? "active" : "")">
                <i class="fas fa-check-circle"></i> 
                Đã phê duyệt
                <span class="badge bg-success">@(ViewBag.ApprovedCount ?? 0)</span>
            </a>
            <a href="@Url.Action("Rejected", "Student", new { search = ViewBag.Search })" class="active">
                <i class="fas fa-times-circle"></i> 
                Bị từ chối
                <span class="badge bg-danger">@(ViewBag.RejectedCount ?? 0)</span>
            </a>
        </div>
    </div>

    <div class="student-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold text-primary mb-0">
                Laptop Bị Từ Chối
            </h3>
        </div>

        <div class="mb-3">
            <a class="btn btn-primary" asp-controller="Student" asp-action="Create">
                <i class="fas fa-plus"></i> Tạo laptop cho thuê
            </a>
            <a class="btn btn-success" asp-controller="Student" asp-action="MyRentals">
                <i class="fas fa-handshake"></i> Laptop Đang Cho Thuê
            </a>
            <a class="btn btn-secondary" asp-controller="Student" asp-action="Report">
                <i class="fas fa-arrow-left"></i> Báo cáo
            </a>
        </div>

        <!-- Bộ lọc tìm kiếm -->
        <div class="card shadow-sm border-0 mb-3">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Tìm tên hoặc hãng</label>
                        <input type="search" name="search" value="@(ViewBag.Search ?? "")" class="form-control" placeholder="Nhập tên laptop hoặc hãng..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Từ ngày</label>
                        <input type="date" name="fromDate" value="@(ViewBag.FromDate ?? "")" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Đến ngày</label>
                        <input type="date" name="toDate" value="@(ViewBag.ToDate ?? "")" class="form-control" />
                    </div>
                    <div class="col-md-2 d-flex align-items-end gap-2">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i>Tìm
                        </button>
                        <a href="@Url.Action("Rejected", "Student")" class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Không có laptop nào bị từ chối
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <table class="table table-bordered table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Tên Laptop</th>
                                <th>Hãng</th>
                                <th class="text-end">Giá</th>
                                <th class="text-center">Ngày tạo</th>
                                <th class="text-center">Trạng thái</th>
                                <th>Lý do từ chối</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach(var l in laptopsPaged)
                    {
                        // Kiểm tra xem Student đã đồng ý chưa (UpdatedDate trong vòng 24 giờ)
                        bool isRecentlyUpdated = l.UpdatedDate.HasValue && 
                                                 (DateTime.Now - l.UpdatedDate.Value).TotalHours <= 24;
                        
                        <tr>
                            <td class="ps-4">
                                <strong>@l.Name</strong>
                            </td>
                            <td>@l.Brand?.BrandName</td>
                            <td class="text-end">@(l.Price?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "-")</td>
                            <td class="text-center">@(l.CreatedDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td class="text-center">
                                @if (l.Status?.StatusName?.ToLower() == "rejected")
                                {
                                    <span class="badge bg-danger">Từ chối</span>
                                }
                                else if (l.Status?.StatusName?.ToLower() == "fixing")
                                {
                                    <span class="badge bg-warning text-dark">Đang sửa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@l.Status?.StatusName</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(l.RejectReason))
                                {
                                    <div class="reject-reason-box">
                                        <small class="fw-bold text-dark">@l.RejectReason</small>
                                    </div>
                                }
                                else
                                {
                                    <small class="text-muted">Không có lý do</small>
                                }
                            </td>
                            <td class="text-center">
                                @* Chỉ hiển thị nút khi StatusId = 4 (Fixing) VÀ chưa đồng ý trong 24 giờ gần đây *@
                                @if (l.Status?.StatusName?.ToLower() == "fixing" && !isRecentlyUpdated)
                                {
                                    <form asp-action="AcceptPrice" asp-route-id="@l.Id" asp-controller="Student" method="post" style="display:inline" onsubmit="return confirm('Bạn có đồng ý cho sửa chữa không?');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-success me-1" type="submit">
                                            <i class="bi bi-check-circle"></i> Đồng ý
                                        </button>
                                    </form>
                                    <form asp-action="CancelRejectedLaptop" asp-route-id="@l.Id" asp-controller="Student" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn hủy laptop này không?');">
                                        @Html.AntiForgeryToken()
                                        <button class="btn btn-sm btn-warning" type="submit">
                                            <i class="bi bi-x-circle"></i> Hủy
                                        </button>
                                    </form>
                                }
                                else if (l.Status?.StatusName?.ToLower() == "fixing" && isRecentlyUpdated)
                                {
                                    <small class="text-success fw-bold">
                                        <i class="bi bi-check-circle-fill"></i> Đã đồng ý
                                    </small>
                                }
                                else
                                {
                                    <small class="text-muted">Không có thao tác</small>
                                }
                            </td>
                        </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
            
            @* Pagination *@
            <nav class="mt-3">
                <ul class="pagination pagination-sm justify-content-center">
                    <li class="page-item @(page == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Rejected", "Student", new { page = page - 1, search = ViewBag.Search, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })">Trước</a>
                    </li>
                    
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == page ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Rejected", "Student", new { page = i, search = ViewBag.Search, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(page == totalPages ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Rejected", "Student", new { page = page + 1, search = ViewBag.Search, fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })">Sau</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
