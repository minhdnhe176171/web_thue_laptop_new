@using web_chothue_laptop.Helpers
@using web_chothue_laptop.Models
@model web_chothue_laptop.Models.Booking

@{
    ViewData["Title"] = "Thanh Toán Đơn Hàng";
    // Kiểm tra null an toàn ngay đầu view
    if (Model == null)
    {
        <div class="alert alert-danger">Không tìm thấy thông tin đơn hàng!</div>
        return; // Dừng render để tránh lỗi
    }
}

<div class="container py-4">
    <div class="mb-3">
        <a asp-controller="Booking" asp-action="MyBookings" class="text-decoration-none text-primary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-credit-card-2-front"></i> Xác Nhận Thanh Toán
                    </h4>
                </div>

                <div class="card-body p-4">
                    
                    <div class="text-center mb-4">
                        <span class="text-muted text-uppercase small ls-1">Mã Đơn Hàng</span>
                        <h2 class="text-primary fw-bold display-6 mt-1">#@Model.Id</h2>
                    </div>

                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded mb-4">
                        <span class="fw-bold text-secondary">Tổng thanh toán:</span>
                        <span class="fw-bold text-danger fs-4">
                            @if (Model.TotalPrice.HasValue)
                            {
                                @Model.TotalPrice.Value.ToString("N0") <small>VNĐ</small>
                            }
                            else
                            {
                                <span>0 đ</span>
                            }
                        </span>
                    </div>

                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span class="text-muted">Laptop thuê:</span>
                            <span class="fw-bold">@Model.Laptop?.Name</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span class="text-muted">Ngày bắt đầu:</span>
                            <span>@Model.StartTime.ToString("dd/MM/yyyy")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span class="text-muted">Ngày kết thúc:</span>
                            <span>@Model.EndTime.ToString("dd/MM/yyyy")</span>
                        </li>
                         <li class="list-group-item d-flex justify-content-between px-0">
                            <span class="text-muted">Người thuê:</span>
                            <span>@Model.CustomerId</span> </li>
                    </ul>

                    <form asp-controller="Payment" asp-action="CreatePaymentUrl" method="post">
                        <input type="hidden" name="bookingId" value="@Model.Id" />
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 py-3 rounded-pill fw-bold shadow-sm hover-up">
                            THANH TOÁN QUA VNPAY
                        </button>
                    </form>
                    
                    <div class="text-center mt-3">
                        <small class="text-muted fst-italic">
                            <i class="bi bi-shield-lock-fill"></i> Giao dịch được bảo mật bởi VNPay
                        </small>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-up:hover {
        transform: translateY(-2px);
        transition: all 0.2s;
    }
    .ls-1 { letter-spacing: 1px; }
</style>