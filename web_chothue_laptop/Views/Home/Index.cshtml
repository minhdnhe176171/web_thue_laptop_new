@model IEnumerable<web_chothue_laptop.Models.Laptop>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Danh sách laptop</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="search" name="search" value="@(ViewBag.Search ?? "")" class="form-control" placeholder="Tìm tên hoặc hãng" />
        <button class="btn btn-outline-secondary" type="submit">Tìm</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Hãng</th>
            <th>Giá (VNĐ)</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
@foreach(var l in Model)
{
    <tr>
        <td>@l.Name</td>
        <td>@l.Brand?.BrandName</td>
        <td>@(l.Price?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "-")</td>
        <td>@l.Status?.StatusName</td>
    </tr>
}
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)@(string.IsNullOrEmpty(ViewBag.Search) ? "" : "&search=" + ViewBag.Search)">Trước</a>
            </li>

            @{
                int currentPage = ViewBag.CurrentPage;
                int totalPages = ViewBag.TotalPages;
                int startPage = Math.Max(1, currentPage - 2);
                int endPage = Math.Min(totalPages, currentPage + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=1@(string.IsNullOrEmpty(ViewBag.Search) ? "" : "&search=" + ViewBag.Search)">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i@(string.IsNullOrEmpty(ViewBag.Search) ? "" : "&search=" + ViewBag.Search)">@i</a>
                </li>
            }

            @if (endPage < totalPages)
            {
                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" href="?page=@totalPages@(string.IsNullOrEmpty(ViewBag.Search) ? "" : "&search=" + ViewBag.Search)">@totalPages</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)@(string.IsNullOrEmpty(ViewBag.Search) ? "" : "&search=" + ViewBag.Search)">Sau</a>
            </li>
        </ul>
        <p class="text-center text-muted">
            Hiển thị trang @ViewBag.CurrentPage / @ViewBag.TotalPages (Tổng: @ViewBag.TotalItems laptop)
        </p>
    </nav>
}
